! Unmap capslock
remove Lock = Caps_Lock
keycode 66 = Hyper_L

! Leave mod4 as windows key _only_
remove mod4 = Hyper_L

! Set mod3 to capslock
add mod3 = Hyper_L


keycode 66 = Mode_switch
keysym j = j J Down 
keysym l = l L Right
keysym h = h H Left
keysym k = k K Up
keycode 111 = slash question
keycode 113 = Alt_R
keycode 114 = Control_R 
add control = Control_R
keycode 116 = Super_R
keycode 61  = Up
keycode 135 = Down
keycode 108 = Left
keycode 105 = Right
keycode 232 = F1
keycode 233 = F2
keycode 128 = F3
